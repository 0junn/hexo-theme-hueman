.img-wrap
  position: relative
  display: inline-block
  margin: 0 auto
  width: 100%
  height: 100%
  min-width: 48px
  min-height: 48px
  &:before
    content:''
    position: absolute
    z-index: 1
    top: 50%
    left: 50%
    width: 48px
    height: 48px
    margin-left: -24px
    margin-top: -24px
    border-radius: 4px
    background: url(preloader) center center no-repeat, rgba(0,0,0,0.9)
    background-size: 24px 24px

i.icon
  display: inline-block
  font-family: FontAwesome
  font-style: normal
  text-align: center
  &:before
    transition: 0.2s ease-in

#icon-category
  &:before
    content: "\f07c"
